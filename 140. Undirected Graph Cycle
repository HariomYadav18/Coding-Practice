class Solution {
  public:
  
    bool dfs(int v, vector<vector<int>> &adj, vector<bool> &visited, int parent, int V){
        visited[v] = true;
        
        for(int i : adj[v]){
            if(i >=  V || i < 0) continue;
            if(!visited[i]){
                if(dfs(i, adj, visited, v,V))
                return true;
            }
            
            else if(i != parent)
            return true;
        }
        
        return false;
    }
    
    bool isCycle(int V, vector<vector<int>>& edges) {
        
        vector<vector<int>> adj(V);
        for(auto& edge : edges){
            int u = edge[0], v = edge[1];
            if(u < V && v < V){
                adj[u].push_back(v);
                adj[v].push_back(u);
            }
        }
        
        vector<bool> visited(V, false);
        
        for(int u = 0 ; u < V ; u++){
            if(!visited[u]){
                if(dfs(u, adj, visited, -1,V))
                return true;
            }
        }
        
        return false;
        
    }
};
