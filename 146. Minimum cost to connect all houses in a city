class Solution {
  public:
  
    int manDistance(vector<int>& a, vector<int>& b){
        return abs(a[0] - b[0]) + abs(a[1] - b[1]);
    }
    int minCost(vector<vector<int>>& houses) {
        // code here
        
        int n = houses.size();
        if(n == 0) return 0;
        
        vector<int> dist(n, INT_MAX);
        vector<bool> visited(n, false);
        
        priority_queue<pair<int, int>, vector<pair<int, int>>, greater<>> minHeap;
        
        
        minHeap.push({0,0});
        dist[0] = 0;
        
        int totalCost = 0;
        
        while(!minHeap.empty()){
           
           auto[cost,u] = minHeap.top();minHeap.pop();
           
            if(visited[u]) continue;
            
            visited[u] = true;
            totalCost += cost;
            
            for(int v = 0 ; v<n ; v++){
                if(!visited[v]){
                    int newDist = manDistance(houses[u],houses[v]);
                    if(newDist < dist[v]){
                        dist[v] = newDist;
                    
                    minHeap.push({newDist, v});
                   }
                }
            }
        }
        
        return totalCost;
        
    }
};
