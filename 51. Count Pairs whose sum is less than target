// User function Template for C++
class Solution {
  public:
    int countPairs(vector<int> &arr, int target) {
        // Your code here
        int n = arr.size();
        sort(arr.begin(), arr.end());
        int cnt = 0;
        
        int left = 0 , right = n - 1;
        
        while(left<right){
            int sum = arr[left] + arr[right];
            
            if(sum<target){
                cnt += right - left;
                left++;
            }else {
                right--;
            }
        }
        return cnt;
        
    }

};
