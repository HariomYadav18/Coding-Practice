class Solution {
  public:
    vector<int> subarraySum(vector<int> &arr, int target) {
        // code here
        int n = arr.size();
        int l = 0 , r = 0;
        
        vector<int> ans;
        
        int curr = 0;
        for(int i = 0 ; i<n ; i++){
            curr += arr[i];
            
            if(curr>=target){
                r = i;
                
                while(curr > target && l<r){
                    curr -= arr[l];
                    l++;
                    
                }
                if(curr == target){
                    ans.push_back(l+1);
                    ans.push_back(r+1);
                    return ans;
                }
            }
            
            
        }
        return {-1};
    }
};
