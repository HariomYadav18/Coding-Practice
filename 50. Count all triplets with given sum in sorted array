class Solution {
  public:
    int countTriplets(vector<int> &arr, int target) {
        // Code Here
        int n = arr.size();
        int ans = 0;
        
        for(int i = 0 ; i<n-2; i++){
            int left = i+1;
            int right = n-1;
            
            while(left<right){
            
            int sum = arr[i] + arr[left] + arr[right];
            
            if(sum<target){
                left += 1;
                
            }
            else if(sum>target){
                right -= 1;
            }
            else if(sum == target){
                int no1 = arr[left], no2 = arr[right];
                int cnt1 = 0;
                int cnt2 = 0;
                
                
                while(left <= right && arr[left] == no1){
                    left++;
                    cnt1++;
                }
                while(left <= right && arr[right] == no2){
                    right--;
                    cnt2++;
                }
                
                if(no1 == no2)
                    ans += (cnt1 * (cnt1 - 1)) / 2;
                
                else
                    ans += (cnt1 * cnt2);
                }
            
            }
        }
        
        return ans;
    }
   
};
