class Solution {
  public:
    // Function to find equilibrium point in the array.
    int findEquilibrium(vector<int> &arr) {
        // code here
        int n = arr.size();
        
        int total = 0;
        int left = 0 ;
        
        for(int i = 0 ; i<n ; i++){
            total += arr[i];
        }
        
        for(int i = 0 ; i<n ;i++){
          int right = total - left - arr[i];
            if(left == right){
                return i;
                
               
            }
            left += arr[i];
        }
        return -1;
    }
};
