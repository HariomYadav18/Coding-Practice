class Solution {
  public:
    int minCoins(vector<int> &coins, int sum) {
        // code here
        int n = coins.size();
        
        vector<int> dp(sum+1, INT_MAX);
        
        dp[0] = 0;
        
        for(int i = n - 1 ; i>= 0 ; i--){
            for(int j = 1; j<=sum ; j++){
                int accept = INT_MAX , notAccept = INT_MAX;
                
                if(j-coins[i]>=0 && coins[i]>0){
                    accept = dp[j - coins[i]];
                    
                    if(accept != INT_MAX) accept++;
                }
                
                if(i+1<n){
                notAccept = dp[j];
                }
                
                dp[j] = min(accept, notAccept);
                
            }
        }
        if(dp[sum]!=INT_MAX) return dp[sum];
        return -1;
    }
};
