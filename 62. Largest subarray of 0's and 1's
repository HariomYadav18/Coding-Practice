class Solution {
  public:
    int maxLen(vector<int> &arr) {
        // Your code here
        int n = arr.size();
        
        unordered_map<int,int> mp;
        
        int sum = 0;
        int maxLen = 0;
        int end_index = 0;
        
        for(int i = 0 ; i<n ; i++){
            arr[i] = (arr[i] == 0) ? -1 : 1;
            
        }
        for(int i = 0 ; i<n ; i++){
            sum += arr[i];
            
            if(sum == 0){
                maxLen = i+1;
                end_index = i;
            }
            
        if(mp.find(sum) != mp.end()){
            if(maxLen < i - mp[sum]){
                maxLen = i - mp[sum];
                end_index = i;
            }
        }
        else{
            mp[sum] = i;
        }
        }
        return maxLen;
    }
};
