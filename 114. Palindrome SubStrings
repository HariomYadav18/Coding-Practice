class Solution {
  public:
    int countPS(string &s) {
        // code here
        int n = s.length();
        long long cnt = 0; 
        
        for(int i = 0 ; i < n ; i++){
            int l = i  , r = i ;
            while(l >= 0  && r<n && s[l] == s[r]){
                if(r - l + 1 >= 2) cnt++;
                l--;
                r++;
            }
        }
        
        for(int i = 0 ; i < n ; i++){
            int l = i ,  r = i+1;
            while(l >= 0  &&  r < n  && s[l] == s[r]){
                if(r - l  + 1 >= 2) cnt++;
                l--;
                r++;
            }
        }
        
        return (int)cnt;
    }
};
