class Solution {
  public:
    int minJumps(vector<int>& arr) {
        // code here
        int n = arr.size();
        
        if(n==1) return 0;
        if(arr[0] == 0) return -1;
        
        
        int curr = 0, mxl = 0 , jumps = 0;
        
        for(int i = 0 ; i < n-1; i++){
            mxl = max(mxl , i + arr[i]);
            
            if(curr == i){
                jumps++;
                curr = mxl;
                
                
                if(curr >= n-1) return jumps;
                
                
                
            }
        }
        return -1;
    }
};
