class Solution {
  public:
    int diameter(Node* root) {
        int res = 0;
        height(root,res);
        return res;
    }
        // Your code here
        
   private:
   
    int height(Node* root, int &res){
        if(root == nullptr) return 0;
        
       
        int lh = height(root->left,res);
        int rh = height(root->right,res);
        
        res = max(res,lh+rh);
        
        return 1+max(lh, rh);
    }
};
